var xmot, ymot;
x = xprevious;
y = yprevious;
for (i = 0; i &lt; 90; i += 5)
{
    xmot = x + lengthdir_x(spd, dir + i);
    ymot = y + lengthdir_y(spd, dir + i);
    idcoll = scr_enh_collision(xmot, ymot, z, zhigh, 0, 0)
    if (idcoll == noone) //(!place_meeting(xmot, ymot, obj_wall))
    {
        x = xmot;
        y = ymot;
        break;
    }

    xmot = x + lengthdir_x(spd, dir - i);
    ymot = y + lengthdir_y(spd, dir - i);
    idcoll = scr_enh_collision(xmot, ymot, z, zhigh, 0, 0);
    if (idcoll == noone) //(!place_meeting(xmot, ymot, obj_wall))
    {
        x = xmot;
        y = ymot;
        break;
    }
}
